{
    "name": "@obusk/nextjs-prettier-boilerplate",
    "private": true,
    "description": "Github Repo template for a next.js project with linting, strictness and CI setup",
    "keywords": [
        "eslint",
        "nextjs",
        "prettier",
        "template",
        "typescript",
        "vercel"
    ],
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/nextjs-prettier-boilerplate.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "20.x",
        "npm": "10.x"
    },
    "volta": {
        "node": "20.11.1"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --ignore-path .gitignore",
        "postlint": "npm run prettier",
        "lint-fix": "next lint --ignore-path .gitignore --fix",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --check",
        "postlint-fix": "npm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.0",
        "next": "14.2.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwind-merge": "^2.2.1",
        "tailwindcss": "3.4.1"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "^0.1.2",
        "@testing-library/jest-dom": "^6.4.2",
        "@types/node": "20.11.25",
        "@types/react": "18.2.64",
        "@types/react-dom": "18.2.21",
        "autoprefixer": "10.4.18",
        "eslint": "8.57.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.2",
        "postcss": "8.4.35",
        "prettier": "^3.2.5",
        "simple-git-hooks": "^2.10.0",
        "typescript": "~5.3.3"
    }
}
