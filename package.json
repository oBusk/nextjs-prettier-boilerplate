{
    "name": "@obusk/nextjs-prettier-boiler",
    "private": true,
    "description": "Github Repo template for a next.js project with linting, strictness and CI setup",
    "keywords": [
        "eslint",
        "nextjs",
        "prettier",
        "template",
        "typescript",
        "vercel"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/nextjs-prettier-boilerplate.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "20.x",
        "npm": "10.x"
    },
    "volta": {
        "node": "20.11.1"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --ignore-path .gitignore",
        "postlint": "npm run prettier",
        "lint-fix": "next lint --ignore-path .gitignore --fix",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --check",
        "postlint-fix": "npm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "next": "14.1.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.4.1"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "^0.0.7",
        "@types/node": "20.11.24",
        "@types/react": "18.2.61",
        "@types/react-dom": "18.2.19",
        "autoprefixer": "10.4.17",
        "eslint": "8.57.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "postcss": "8.4.35",
        "prettier": "^3.2.5",
        "simple-git-hooks": "^2.9.0",
        "typescript": "5.3.3"
    }
}
